#include <stdio.h>
#include <math.h>
#include <string.h>
#include <ctype.h>
#include <stdbool.h>

int main() 
{
   char seq[500000];
   int length;
   int count;
   int i;
   int sum;
   int sum1;
   int sum2;

printf ("Give me prokaryotic sequences written in uppercase letters and I will print in the output the position of the possible starting codons ATG and the phrase: This is a coding sequence, if any, by printing the position of the first ending codon found");

   while ( scanf ( "%s", seq) == 1)
 {

    length = strlen(seq);

    count=0;
    sum=0;
    sum1=0;
    sum2=0;

      for (i=0; i < length; i++)
     {
        if (seq[i] == 'A' && seq[i+1] == 'T' && seq[i+2] == 'G')
        {
         count++;
         printf( "ATG position is %d \n", i);
        }
     }

       for (i=3; i < length; i+=3)
      {

         if ( seq [ i ] == 'T' &&  seq [ i+1 ] == 'A'  && seq[ i+2 ] == 'A' )
         {
          sum++;
          printf("TAA position is %d \n", i);
          count ==1 && sum == 1;
          printf (" This is a coding sequence with TAA stop codon \n");
                                       return 0;
         }

       }

       for (i=3; i < length; i+=3)
       {

         if ( seq [ i ] == 'T' &&  seq [ i+1 ] == 'A'  && seq[ i+2 ] == 'G' )
         {
          sum1++;
          printf("TAG position is %d \n", i);
          count ==1 && sum1 == 1;
          printf (" This is a coding sequence with TAG stop codon \n");
                                      return 0;
         }
       }

       for (i=3; i < length; i+=3)
       {

         if ( seq [ i ] == 'T' &&  seq [ i+1 ] == 'G'  && seq[ i+2 ] == 'A' )
         {
          sum2++;
          printf("TGA position is %d \n", i);
          count ==1 && sum2 == 1;
          printf (" This is a coding sequence with TGA stop codon \n");
                                      return 0;
          }
       }

          printf ( "length= %d, ATG= %d", length, count);
 }
}
